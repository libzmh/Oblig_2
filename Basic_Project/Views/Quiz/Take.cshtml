@model Basic_Project.Models.Quiz

@{
    ViewData["Title"] = "Take Quiz";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.Title</h2>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-0 mt-2">@Model.Description</p>
                    }
                </div>
            </div>

            <form asp-action="SubmitQuiz" asp-controller="Quiz" method="post">
                <input type="hidden" name="quizId" value="@Model.Id" />

                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var question = Model.Questions.ElementAt(i);
                    
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Question @(i + 1) <span class="badge bg-secondary">@question.Points pts</span></h5>
                        </div>
                        <div class="card-body">
                            <p class="fw-bold mb-3">@question.QuestionText</p>
                            
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="answers[@question.Id]" id="q@(question.Id)_a" value="A" required>
                                <label class="form-check-label" for="q@(question.Id)_a">
                                    <strong>A.</strong> @question.OptionA
                                </label>
                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="answers[@question.Id]" id="q@(question.Id)_b" value="B" required>
                                <label class="form-check-label" for="q@(question.Id)_b">
                                    <strong>B.</strong> @question.OptionB
                                </label>
                            </div>

                            @if (!string.IsNullOrEmpty(question.OptionC))
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="answers[@question.Id]" id="q@(question.Id)_c" value="C">
                                    <label class="form-check-label" for="q@(question.Id)_c">
                                        <strong>C.</strong> @question.OptionC
                                    </label>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(question.OptionD))
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="answers[@question.Id]" id="q@(question.Id)_d" value="D">
                                    <label class="form-check-label" for="q@(question.Id)_d">
                                        <strong>D.</strong> @question.OptionD
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="d-flex gap-2 mb-5">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Quiz</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>