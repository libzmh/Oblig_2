@model Basic_Project.ViewModels.QuizResultViewModel

@{
    ViewData["Title"] = "Quiz Result";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            
            <!-- Result Summary -->
            <div class="card mb-4 text-center">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Quiz Completed!</h2>
                </div>
                <div class="card-body">
                    <h3 class="mb-3">@Model.QuizTitle</h3>
                    <div class="display-4 mb-3">
                        <span class="text-primary">@Model.TotalScore</span> / @Model.MaxScore
                    </div>
                    <h4 class="mb-3">
                        @if (Model.Percentage >= 80)
                        {
                            <span class="badge bg-success fs-5">Excellent! @Model.Percentage.ToString("F1")%</span>
                        }
                        else if (Model.Percentage >= 60)
                        {
                            <span class="badge bg-warning fs-5">Good! @Model.Percentage.ToString("F1")%</span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-5">@Model.Percentage.ToString("F1")%</span>
                        }
                    </h4>
                    <p class="text-muted">
                        You answered @Model.QuestionResults.Count(q => q.IsCorrect) out of @Model.QuestionResults.Count questions correctly.
                    </p>
                </div>
            </div>

            <!-- Detailed Results -->
            <h4 class="mb-3">Detailed Results</h4>

            @for (int i = 0; i < Model.QuestionResults.Count; i++)
            {
                var result = Model.QuestionResults[i];
                
                <div class="card mb-3 @(result.IsCorrect ? "border-success" : "border-danger")">
                    <div class="card-header @(result.IsCorrect ? "bg-success bg-opacity-10" : "bg-danger bg-opacity-10")">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Question @(i + 1)</h6>
                            <div>
                                @if (result.IsCorrect)
                                {
                                    <span class="badge bg-success">✓ Correct (+@result.Points pts)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">✗ Incorrect</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="fw-bold mb-3">@result.QuestionText</p>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Your Answer:</strong> 
                                    <span class="@(result.IsCorrect ? "text-success" : "text-danger")">
                                        @result.UserAnswer
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Correct Answer:</strong> 
                                    <span class="text-success">@result.CorrectAnswer</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="d-flex gap-2 mb-5">
                <a asp-action="Take" asp-controller="Quiz" asp-route-id="@Model.QuizId" class="btn btn-primary btn-lg">Retake Quiz</a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">Back to Home</a>
            </div>

        </div>
    </div>
</div>